{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "noImplicitAny": true
  },
  "include": ["src/**/*", "tests/**/**/*"],
  "exclude": ["node_modules", "dist"]
}
